target 'Scrobblify' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Scrobblify
  pod 'Alamofire', '~> 4.5'
  pod 'CryptoSwift', '~> 0.7'
  pod 'Kingfisher', '~> 4.1'
  pod 'ObjectMapper', '~> 3.1.0'
  pod 'SwiftyJSON'
  pod 'TTGSnackbar'

  target 'ScrobblifyTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ScrobblifyUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
